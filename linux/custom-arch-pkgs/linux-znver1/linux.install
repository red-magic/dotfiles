kernelarch=

post_install() {
	mkinitcpio -p linux-$kernelarch
	grub-mkconfig -o /boot/grub/grub.cfg
}

post_upgrade() {
	mkinitcpio -p linux-$kernelarch
}

post_remove() {
	rm -f /boot/initramfs-linux-$kernelarch.img
	rm -f /boot/initramfs-linux-$kernelarch-fallback.img
	grub-mkconfig -o /boot/grub/grub.cfg
}
