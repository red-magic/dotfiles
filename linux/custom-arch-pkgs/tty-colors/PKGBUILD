pkgname=tty-colors
pkgver=1.0
pkgrel=1
pkgdesc='Change tty colors'
arch=(any)
depends=(bash)
backup=(etc/systemd/tty-colors.conf)
source=(tty-colors
	tty-colors.conf
	tty-colors.service)

b2sums=(a09487435e878706a21387492a71fee34d389d5e5be2152586c94da799240980057c092a3ea5e45b051f3670345cdd32a64dfe083e9245d4ec8ba4f569687c5d
	43cf52e9733f5d22925554b54f54c7f84c12b8d4e84073e2044ff43fffaba78f114f90e4835ed26fd795bc57d55700c3d4a971db1f0f246126bf6f87b12df490
	bd6012bdf220d9312c402280537497d1a150e63e5f823143ae13ae3d028bdfce2a7fee0afbe27519a3a5ba5d04cc111d56a74b919e58c4e46e0f48acbf60e2b9)

package() {
	install -Dm 755 tty-colors -t $pkgdir/usr/bin
	install -Dm 644 tty-colors.conf -t $pkgdir/etc/systemd
	install -Dm 644 tty-colors.service -t $pkgdir/usr/lib/systemd/system
}
