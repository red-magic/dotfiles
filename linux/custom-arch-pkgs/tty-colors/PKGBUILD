pkgname=tty-colors
pkgver=1.0
pkgrel=1
pkgdesc='Change tty colors'
url=https://github.com/red-magic/dotfiles
arch=(any)
depends=(bash)
backup=(etc/tty-colors/tty-colors.conf)
install=$pkgname.install
source=($url/raw/master/linux/scripts/tty-colors.tar.xz)
b2sums=(SKIP)

package() {
	install -Dm 755 $pkgname/tty-colors -t $pkgdir/usr/bin
	install -Dm 644 $pkgname/colorschemes/* -t $pkgdir/etc/tty-colors/colorschemes
	install -Dm 644 $pkgname/systemd/tty-colors.conf -t $pkgdir/etc/tty-colors
	install -Dm 644 $pkgname/systemd/tty-colors.service -t $pkgdir/usr/lib/systemd/system
}
