pkgname=tty-colors
pkgver=1.0
pkgrel=1
pkgdesc='Change TTY colors'
url=https://github.com/red-magic/tty-colors
arch=(any)
depends=(bash)
backup=(etc/tty-colors/tty-colors.conf)
install=$pkgname.install
source=($url/archive/refs/tags/v$pkgver.tar.gz)
b2sums=(de9bda83c41af4bcbf5efd9763dd07ad741929346fee8cbda3828115d333451f09e45afed113615a588ff4a7d1a2366415180d4d1bfb52cd701989bb4b48f078)

package() {
	install -Dm 755 $pkgname-$pkgver/tty-colors -t $pkgdir/usr/bin
	install -Dm 644 $pkgname-$pkgver/colorschemes/* -t $pkgdir/etc/tty-colors/colorschemes
	install -Dm 644 $pkgname-$pkgver/systemd/tty-colors.conf -t $pkgdir/etc/tty-colors
	install -Dm 644 $pkgname-$pkgver/systemd/tty-colors.service -t $pkgdir/usr/lib/systemd/system
}
