pkgname=tty-colors
pkgver=1.0
pkgrel=1
pkgdesc='Change tty colors'
arch=(any)
depends=(bash)
backup=(etc/tty-colors/tty-colors.conf)
source=(tty-colors
	gen-tty-colors-conf
	tty-colors.service)

b2sums=(SKIP
	SKIP
	SKIP)

package() {
	./gen-tty-colors-conf

	install -Dm 755 tty-colors -t $pkgdir/usr/bin
	install -Dm 644 tty-colors.conf -t $pkgdir/etc/tty-colors
	install -Dm 644 tty-colors.service -t $pkgdir/usr/lib/systemd/system
}
