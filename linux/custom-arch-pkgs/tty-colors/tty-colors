#!/bin/bash

tty_colorschemes=(
	mono_light
	mono_dark
	mono_brown_light
	neon_dark
)

mono_dark=(
	000000
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	000000
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
	9E9E9E
)

mono_light=(
	F5F5F5
	212121
	212121
	212121
	212121
	212121
	212121
	212121
	F5F5F5
	212121
	212121
	212121
	212121
	212121
	212121
	212121
)

mono_brown_light=(
	F5F5F5
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
	F5F5F5
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
	3E2723
)

neon_dark=(
	000000
	B0003A
	B0003A
	B0003A
	673AB7
	B0003A
	00BCD4
	AEAEAE
	000000
	B0003A
	B0003A
	B0003A
	673AB7
	B0003A
	00BCD4
	AEAEAE
)

set_tty_color() {
	echo -en "\e]P0${tty_colors[0]}"  # Background
	echo -en "\e]P1${tty_colors[1]}"  # Red
	echo -en "\e]P2${tty_colors[2]}"  # Green
	echo -en "\e]P3${tty_colors[3]}"  # Yellow
	echo -en "\e]P4${tty_colors[4]}"  # Blue
	echo -en "\e]P5${tty_colors[5]}"  # Magenta
	echo -en "\e]P6${tty_colors[6]}"  # Cyan
	echo -en "\e]P7${tty_colors[7]}"  # White
	echo -en "\e]P8${tty_colors[8]}"  # Black
	echo -en "\e]P9${tty_colors[9]}"  # Red
	echo -en "\e]PA${tty_colors[10]}" # Green
	echo -en "\e]PB${tty_colors[11]}" # Yellow
	echo -en "\e]PC${tty_colors[12]}" # Blue
	echo -en "\e]PD${tty_colors[13]}" # Magenta
	echo -en "\e]PE${tty_colors[14]}" # Cyan
	echo -en "\e]PF${tty_colors[15]}" # White
}

if [[ -n "$1" ]]; then
	for i in {1..6}; do
		tty_colors=()
		ARR=$1
		eval "tty_colors=(\"\${${ARR}[@]}\")"
		set_tty_color > /dev/tty"${i}"
	done
	else
	echo -e "Usage: tty-colors [colorscheme]\nColorschemes:"
	for i in "${tty_colorschemes[@]}"; do
		echo "$i"
	done
fi
