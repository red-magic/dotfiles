pkgname=ttf-material-design-icons
pkgver=4.0.0
pkgrel=1
pkgdesc='Material Design icons by Google'
url=https://github.com/google/material-design-icons
arch=(any)
license=(Apache-2.0)
source=($url/archive/refs/tags/$pkgver.tar.gz)
b2sums=(be09f9470cea698e12b10882054813cffbfc228c823d8a32e35d9b0125f76e7543b0980e239659317f0a4c343d1f9426c215f82a6b28d4d9b9ead80f8e3ad3d7)

package() {
	install -Dm 644 material-design-icons-$pkgver/font/MaterialIcons-Regular.ttf -t $pkgdir/usr/share/fonts/material-design-icons
	install -Dm 644 material-design-icons-$pkgver/LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}
}
