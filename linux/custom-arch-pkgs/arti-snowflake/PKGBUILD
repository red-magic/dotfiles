pkgname=arti-snowflake
pkgver=1.0
pkgrel=1
pkgdesc='Arti with snowflake'
url=https://gitlab.torproject.org/tpo/core/arti
arch=(x86_64)
depends=(arti snowflake-pt-client-bin)
backup=(etc/arti/arti-snowflake.toml)
install=$pkgname.install
source=(arti-snowflake.toml
	arti-snowflake.service)
b2sums=(76c1f4fb8c715109999adfd31ed502522b5092177444c6d5e034a4211b503b4cf4ffaf13b088a60f1705afe72598ef29253fb0de0a725f01662d484ca33de4ef
	21a789114ee2e082bc372fc9ad0976e78cad728030e5339a85e9ac780f236332fdf05552545cff961f126cb8bca6026b14f55faec4e80019e12125db7703ba52)

package() {
	install -Dm 644 arti-snowflake.toml -t $pkgdir/etc/arti
	install -Dm 644 arti-snowflake.service -t $pkgdir/usr/lib/systemd/system
}
