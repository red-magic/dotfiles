pkgname=stockfish-bmi2
_defpkgname=stockfish
pkgver=17.1
pkgrel=1
pkgdesc='A free and strong UCI chess engine'
url=https://github.com/official-stockfish/Stockfish
arch=(x86_64)
conflicts=(stockfish)
license=(GPL-3.0)
options=(!debug)

source=(https://github.com/official-stockfish/Stockfish/releases/download/sf_17.1/stockfish-ubuntu-x86-64-bmi2.tar)

b2sums=(8347648876a2c84499c34155e78feff55ecfa8621bc5282229b0ad5a6d31a9e4f764a4864ecc8beba956682f97701e011faa0bda37296d56532c36e90fc99877)

package() {
	install -Dm 755 ${_defpkgname}/${_defpkgname}-ubuntu-x86-64-bmi2 $pkgdir/usr/bin/${_defpkgname}
	install -Dm 644 ${_defpkgname}/Copying.txt $pkgdir/usr/share/licenses/${pkgname}/LICENSE
}
