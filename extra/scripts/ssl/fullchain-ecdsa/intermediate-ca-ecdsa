#!/bin/sh

set -e

ica_c="AQ"
ica_o="Internal"
ica_cn="ICA1"

valid_days=5475

ca_cn="RCA"

mkdir "$ica_cn"

openssl genpkey \
        -algorithm EC \
        -pkeyopt ec_paramgen_curve:secp384r1 \
        -out "$ica_cn"/"$ica_cn".key

cat > "$ica_cn"/"$ica_cn".ext <<EOF
keyUsage = critical, keyCertSign, cRLSign
basicConstraints = critical, CA:TRUE, pathlen:0
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid,issuer
EOF

openssl req \
        -new \
        -key "$ica_cn"/"$ica_cn".key \
        -subj "/C=$ica_c/O=$ica_o/CN=$ica_cn" \
        -out "$ica_cn"/"$ica_cn".csr

openssl x509 \
        -req \
        -in "$ica_cn"/"$ica_cn".csr \
        -CA "$ca_cn"/"$ca_cn".crt \
        -CAkey "$ca_cn"/"$ca_cn".key \
        -CAcreateserial \
        -sha384 \
        -days $valid_days \
        -extfile "$ica_cn"/"$ica_cn".ext \
        -out "$ica_cn"/"$ica_cn".crt

rm -f "$ica_cn"/"$ica_cn".ext "$ica_cn"/"$ica_cn".csr "$ca_cn"/"$ca_cn".srl

chmod 400 "$ica_cn"/"$ica_cn".key
chmod 444 "$ica_cn"/"$ica_cn".crt

openssl x509 -in "$ica_cn"/"$ica_cn".crt -text -noout
openssl verify -CAfile "$ca_cn"/"$ca_cn".crt "$ica_cn"/"$ica_cn".crt
