Xft.dpi: 96
Xft.antialias: true
Xft.rgb: rgb
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.autohint: true
Xft.lcdfilter: lcddefault

!URxvt*font: -ibm-vga-normal-r-normal--16-120-96-96-c-80-iso10646-1
!URxvt*boldFont: -ibm-vga-normal-r-normal--16-120-96-96-c-80-iso10646-1

URxvt*font: xft: PxPlus IBM VGA8:size=11:style=Regular
URxvt*boldFont: xft: PxPlus IBM VGA8:size=11:style=Regular

URxvt*letterSpace: 0
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt.saveLines: 8192

rofi.font: PxPlus IBM VGA8 12

! Blood Dragon Theme 600

URxvt*foreground:   #b0bec5
URxvt*background:   #080808
URxvt*cursorColor:  #b0bec5

! Colors 0-15.

! black
*.color0:  #080808
*.color8:  #b0bec5

! red
*.color1:  #e53935
*.color9:  #e53935

! green
*.color2:  #d81b60
*.color10: #d81b60

! yellow
*.color3:  #e53935
*.color11: #e53935

! blue
*.color4:  #1e88e5
*.color12: #1e88e5

! magenta
*.color5:  #d81b60
*.color13: #d81b60

! cyan
*.color6:  #00acc1
*.color14: #00acc1

! white
*.color7:  #b0bec5
*.color15: #b0bec5


! ROFI
rofi.width: 24
rofi.padding: 48
rofi.hide-scrollbar: true
rofi.bw: 0
rofi.line-margin: 0
rofi.line-padding: 1
rofi.lines: 8
rofi.columns: 2

! Use extended color schem
rofi.color-enabled:                  true
! Color scheme for normal row
rofi.color-normal:                   argb:00000000,  #b0bec5, argb:00000000,  argb:FFd81b60,  #080808
! Color scheme for urgent row
rofi.color-urgent:                   argb:90000000,  #2f343f, argb:90000000,  #2f343f,  #2f343f
! Color scheme for active row
rofi.color-active:                   argb:99b0bec5,  #586e75, argb:99FFFFFF,  #FFFFFF,  #000000
! Color scheme window
rofi.color-window:                   argb:FF0f0f0f,  #080808, #080808
! Separator style (none, dash, solid)
rofi.separator-style:                none
